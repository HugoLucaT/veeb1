<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Hugo Luca, veebiprogrammeerimine 2023</title>
	<link rel="stylesheet" href="/styles/gallery.css">
	<link rel="stylesheet" href="/styles/modal.css">
	<script src="/script/galleryscript.js" defer></script>
</head>
<body>
	<img src="/banner/banner.png" alt="veebiprogrammeerimise kursuse banner">
	<h1>Fotogalerii</h1>
	<ul>
		<li><a href="/">Avalehele</a></li>
	</ul>
	<hr>
	
	<dialog id="modal" class="modalarea">
		<span id="modalClose" class="modalclose">&times;</span>
		<div class="modalhorizontal">
			<div class="modalvertical">
				<p id="modalCaption"></p>
				<img id="modalImage" src="/pics/empty.png" alt="Galeriipilt">
			</div>
		</div>
	</dialog>
	
	<h2>Galerii</h2>
	<div class="gallery">
		<!--JÃ¤rgneb korduv osa, iga pisipildi jaoks oma-->
		<% allPictures.forEach(function(pics){ %>
			<div class="thumbgallery">
				<img src="gallery/thumbs/<%= pics.filename %>" alt="<%= pics.alttext %>"  data-filename="<%= pics.filename %>"  data-id="<%= pics.id %>"  class="thumbs">
				<p></p>
			</div>
		<% }); %>
	</div>
</body>
</html>